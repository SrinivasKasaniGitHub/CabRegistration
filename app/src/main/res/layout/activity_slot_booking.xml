                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/select_addressproof_type"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:background="@drawable/spinner_background"
                                        android:drawableRight="@drawable/down_arrow_white"
                                        android:inputType="textCapCharacters"
                                        android:paddingRight="@dimen/margin_10dp"
                                        android:text="@string/select_address_proof"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/margin_Edittextsize" />

                                    <EditText
                                        android:id="@+id/address_proof_details"
                                        style="@style/edt_custom_style"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_10dp"
