                                        android:gravity="center"
                                        android:text="@string/select_booking_date"
                                        android:textSize="@dimen/margin_Edittextsize" />

                                    <ImageView
                                        android:layout_width="@dimen/margin_img_calder"
                                        android:layout_height="@dimen/margin_img_calderheight"
                                        android:layout_gravity="center|right"
                                        android:layout_marginTop="5dp"
                                        android:background="?android:attr/selectableItemBackground"
                                        android:contentDescription="@null" />


                                </FrameLayout>

                                <!--  <Button
                                      android:id="@+id/select_fbooking_date"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:layout_marginTop="@dimen/margin_10dp"
